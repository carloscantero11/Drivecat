<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!--Texto de Inicio de Sesión-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textColor="@color/letra1"
            android:textSize="58sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:layout_gravity="center_horizontal"/>

        <!--Tarjeta de datos-->
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="316dp"
            android:layout_gravity="center"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/base3"
            android:layout_marginTop="30dp"
            >

            <!---->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!--Cédula-->
                <EditText
                    android:id="@+id/textCedula"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_perm_identity_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Cédula"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="number"/>

                <!--Contraseña-->
                <EditText
                    android:id="@+id/textContraseña"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_vpn_key_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Contraseña"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="textPassword"/>

                <!-- Botón de Registro -->
                <Button
                    android:id="@+id/btnLogearse"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Iniciar Sesión"
                    android:backgroundTint="@color/primario1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="38dp"
                    android:layout_marginHorizontal="50dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>