<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base2"
    tools:context=".TaquillaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--Tarjeta de la Ruta Urbana-->
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="110dp"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        app:contentPadding="11dp"
        app:cardBackgroundColor="@color/primario3"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Cantidad de Viajes a Recargar-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Viajes"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/viaje1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="40sp"/>

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="8dp"/>

            <!--Nombre de la Ruta-->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Ruta"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Urbana"
                    android:textColor="@color/white"
                    android:textSize="34sp"/>

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="8dp"/>

            <!--Botón de Disminuir-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/disminuir"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/btnscan"
                android:contentDescription="Disminuir"
                android:drawableLeft="@drawable/baseline_exposure_neg_1_24"
                android:paddingLeft="7dp"/>

            <!--Botón de Aumento-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/aumentar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/btnscan"
                android:contentDescription="Aumentar"
                android:drawableLeft="@drawable/baseline_exposure_plus_1_24"
                android:layout_marginLeft="10dp"
                android:paddingLeft="7dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Tarjeta de la Ruta Maracay-->
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        app:contentPadding="11dp"
        app:cardBackgroundColor="@color/primario3"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Cantidad de Viajes a Recargar-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Viajes"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/viaje2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="40sp"/>

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="8dp"/>

            <!--Nombre de la Ruta-->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Ruta"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Extraurbana"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="8dp"/>

            <!--Botón de Disminuir-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/disminuir1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/btnscan"
                android:contentDescription="Disminuir"
                android:drawableLeft="@drawable/baseline_exposure_neg_1_24"
                android:paddingLeft="7dp"/>

            <!--Botón de Aumento-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/aumentar1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/btnscan"
                android:contentDescription="Aumentar"
                android:drawableLeft="@drawable/baseline_exposure_plus_1_24"
                android:layout_marginLeft="10dp"
                android:paddingLeft="7dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Tarjeta de la Ruta Administrativa-->
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        app:contentPadding="11dp"
        app:cardBackgroundColor="@color/primario3"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Cantidad de Viajes a Recargar-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Viajes"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/viaje3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="40sp"/>

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="8dp"/>

            <!--Nombre de la Ruta-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Ruta"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Administrativa"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="8dp"/>

            <!--Botón de Disminuir-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/disminuir2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/btnscan"
                android:contentDescription="Disminuir"
                android:drawableLeft="@drawable/baseline_exposure_neg_1_24"
                android:paddingLeft="7dp"/>

            <!--Botón de Aumento-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/aumentar2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:background="@drawable/btnscan"
                android:contentDescription="Aumentar"
                android:drawableLeft="@drawable/baseline_exposure_plus_1_24"
                android:layout_marginLeft="10dp"
                android:paddingLeft="7dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="54dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="8dp"/>

                <!--Botón para Escanear tarjeta y validar Recarga-->
                <LinearLayout
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Recargar Viajes"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:layout_marginTop="14dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/recarga"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnscan"
                        android:contentDescription="Scanear"
                        android:drawableLeft="@drawable/baseline_qr_code_24"
                        android:paddingStart="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

                <View
                    android:layout_width="3dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginHorizontal="15dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Botón de Cerrar Sesión-->
        <Button
            android:id="@+id/cerrarsesion2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Cerrar Sesión"
            android:backgroundTint="@color/primario1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="44dp"
            android:layout_marginHorizontal="80dp"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>