<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primario2"
    tools:context=".adiciones.HistorialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </CalendarView>

        <!--Viajes por Semana-->
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginVertical="2dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/base1"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="Viajes por\nDÃ­a"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:layout_marginHorizontal="14dp"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginHorizontal="15dp"/>

                <TextView
                    android:id="@+id/dia"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="70sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <!--Viajes por Semana-->
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginVertical="28dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/base1"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:text="Viajes por\nSemana"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_marginHorizontal="14dp"/>

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/primario1"
                android:layout_marginHorizontal="15dp"/>

            <TextView
                android:id="@+id/semana"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textSize="70sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Viajes por Mes-->
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/base1"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="14dp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Viajes por\nMes"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:background="@color/primario1" />

            <TextView
                android:id="@+id/mes"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="70sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>