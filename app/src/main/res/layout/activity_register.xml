<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base1"
    android:fitsSystemWindows="true"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Texto-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textColor="@color/letra1"
            android:textSize="58sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"/>

        <!--Tarjeta de datos-->
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/base3"
            android:layout_marginTop="18dp">

            <!---->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!--Cédula-->
                <EditText
                    android:id="@+id/cedula"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_perm_identity_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Cédula"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="number"/>

                <!--Nombre-->
                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Nombre"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="text"/>

                <!--Apellido-->
                <EditText
                    android:id="@+id/apellido"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Apellido"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="text"/>

                <!--Carrera-->
                <EditText
                    android:id="@+id/carrera"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_account_balance_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Carrera"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="text"/>

                <!--Teléfono-->
                <EditText
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_smartphone_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Teléfono"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="number"/>

                <!--Contraseña-->
                <EditText
                    android:id="@+id/contraseña"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_vpn_key_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Contraseña"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="textPassword"/>

                <!--Confirmación de Contraseña-->
                <EditText
                    android:id="@+id/contraseñac"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:paddingLeft="14dp"
                    android:drawablePadding="8dp"
                    android:hint="Confirmar Contraseña"
                    android:textColorHint="@color/letra2"
                    android:ems="10"
                    android:textColor="@color/letra1"
                    android:inputType="textPassword"/>

                <!-- Botón de Registro -->
                <Button
                    android:id="@+id/registrarse"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Registrarse"
                    android:backgroundTint="@color/primario1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="50dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>