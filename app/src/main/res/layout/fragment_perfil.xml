<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base2"
    tools:context=".fragment.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Perfil del Transportista-->
        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="295dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-thin"
                    android:text="Perfil"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="46sp"
                    android:layout_marginTop="2dp"/>

                <View
                    android:layout_width="360dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginHorizontal="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="190dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Nombre\n\nC.I\n\nTeléfono\n\nPlaca"
                        android:gravity="right"
                        android:textSize="20sp"
                        android:layout_margin="12dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/primario1"
                        android:layout_marginHorizontal="6dp"/>

                    <TextView
                        android:id="@+id/perfilTransportista"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:textColor="@color/black"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_margin="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="8dp"/>

                <LinearLayout
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Historial de\nViajes"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"/>

                    <!--Botón de Configuración-->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/historial"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnscan"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Scanear"
                        android:drawableLeft="@drawable/baseline_content_paste_search_24"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <View
                    android:layout_width="3dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginHorizontal="15dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>