    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Modificar Datos"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"/>

                    <!--Botón de Configuración-->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/modificarDatos"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnscan"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Scanear"
                        android:drawableLeft="@drawable/baseline_settings_24"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <View
                    android:layout_width="3dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@color/primario1"
                    android:layout_marginHorizontal="15dp"/>

                <LinearLayout
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Modo Taquilla"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"/>

                    <!--Botón de Modo Taquilla-->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/taquilla"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnscan"
                        android:layout_marginTop="20dp"
                        android:contentDescription="Scanear"
                        android:drawableLeft="@drawable/baseline_add_card_24"
                        android:paddingStart="11dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
